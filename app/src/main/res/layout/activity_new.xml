<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tom.project1.NewActivity"
    android:id="@+id/cslayout"
    >

    <TextView
        android:gravity="center|center_horizontal"
        android:id="@+id/textNew"
        android:layout_width="363dp"
        android:layout_height="103dp"
        android:layout_marginTop="44dp"
        android:text="@string/txtNew"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-1dp" />

    <Button

        android:id="@+id/buttonPush"
        android:layout_width="171dp"
        android:layout_height="44dp"
        android:layout_marginBottom="2dp"

        android:text="@string/buttonPush"
        app:layout_constraintBottom_toBottomOf="parent"

        tools:ignore="RtlHardcoded"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textNew"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginLeft="176dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        tools:layout_editor_absoluteY="465dp"
        tools:layout_editor_absoluteX="181dp" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="165dp"
        android:layout_height="44dp"
        android:layout_marginBottom="2dp"

        android:text="@string/buttonBack"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textNew"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintRight_toLeftOf="@+id/buttonPush"
        android:layout_marginRight="-2dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="465dp"
        app:layout_constraintHorizontal_bias="0.533"
        tools:ignore="RtlHardcoded" />

    <Button
        android:onClick="getString"
        android:id="@+id/buttonGetStr"
        android:layout_width="126dp"
        android:layout_height="42dp"
        android:text="@string/buttongetstr"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textNew" />
</android.support.constraint.ConstraintLayout>
